<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Hadu_Product::product" title="Product" translate="title" sortOrder="10"> 
                    <resource id="Hadu_Product::products" title="Products" translate="title" sortOrder="10" />              
                    <resource id="Hadu_Product::product_configuration" title="Configuration" translate="title" sortOrder="100" />             
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Hadu_Product::product_config" title="Product" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
